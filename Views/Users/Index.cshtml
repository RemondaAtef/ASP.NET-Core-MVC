@model IEnumerable<ProjectExample.Models.UsersVM>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<h2>Welcome to Users</h2>

<a asp-controller="Users" asp-action="Create" class="btn btn-primary">Add User</a>


<table class="table table-striped table-bordered text-center">
    <tr>
        @*<th class="text-center">Id</th>*@
        <th class="text-center">User Name</th>
        <th class="text-center">User Code</th>
        <th class="text-center">Edit</th>
        <th class="text-center">Delete</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    @*<td>@item.Id</td>*@
    <td>@item.UserName</td>
    <td>@item.UserCode</td>
    <td><a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>


    <td><a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>

</tr>
    }
</table>